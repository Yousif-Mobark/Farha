<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_inhereted_maintenance_request_form" model="ir.ui.view">
            <field name="name">maintenance</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">


                <xpath expr="//header" position="replace">
                    <header>
                        <button name="button_stock_picking" string="Validate" type="object" class="oe_highlight"
                                attrs="{'invisible':[('state','in',('draft','supervisor','done'))]}"/>
                        <button name="button_draft_supervisor" string="Supervisor Approve" type="object"
                                class="oe_highlight"
                                attrs="{'invisible':[('state','in',('engineer','supervisor','done'))]}"/>
                        <button name="button_supervisor_eng" string="Engineer Confirm" type="object"
                                class="oe_highlight"
                                attrs="{'invisible':[('state','in',('draft','engineer','done'))]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,supervisor,engineer,done"/>
                    </header>

                </xpath>

                <xpath expr="//field[@name='equipment_id']" position="before">
                    <field name="call_date"/>
                    <field name="bank_name" domain="[('customer','=',True)]"
                           context="{'search_default_customer':1, 'show_address': 1}"
                           options="{&quot;always_reload&quot;: True}"/>
                    <field name="model"/>
                    <field name="location"/>
                    <field name="city"/>


                </xpath>

                <xpath expr="//field[@name='technician_user_id']" position="after">

                    <field name="work_start_time"/>
                    <field name="work_end_time"/>
                    <field name="depature_time"/>
                    <field name="arrival_time"/>
                    <label for="consumed_time"/>
                    <div class="o_row">
                        <field name="consumed_time" calss="oe_inline"/>
                        <span>days</span>
                    </div>
                    <field name="status"/>

                </xpath>


                <xpath expr="//field[@name='close_date']" position="attributes">
                    <attribute name="invisible">1</attribute>

                </xpath>
                <xpath expr="//field[@name='request_date']" position="attributes">
                    <attribute name="invisible">1</attribute>

                </xpath>

                <xpath expr="//group" position="after">
                    <notebook>
                        <page string="Spare Part">
                            <field name="spar_part_id" nolabel="1">
                                <tree editable="top">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="spar_source"/>
                                    <field name="warranty" string="NO Warranty"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group string="Inventory">
                                <field name="picking_from_stock_id" />
                                <field name="picking_from_technician_id" />
                                <field name="picking_type_id" readonly="1"/>
                            </group>
                            <group string="Sale Order">
                                <field name="sale_order_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Dignose Info">
                            <group col="1">

                                <field name="fault" placeholder="Fault  ......." nolabel="1"/>
                                <field name="cuase" placeholder="Cuase  ......." nolabel="1"/>
                                <field name="action" placeholder="Action ......." nolabel="1"/>
                                <field name="comment" placeholder="Comment ......." nolabel="1"/>
                            </group>
                        </page>

                    </notebook>
                </xpath>

            </field>
        </record>

        <record id="view_inhereted_hr_employee_form" model="ir.ui.view">
            <field name="name">hr employee</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="location_id" string="Related Location"/>
                </xpath>

            </field>
        </record>

         <record id="view_manufacturing_request_form" model="ir.ui.view">
            <field name="name">manufacturing</field>
            <field name="name">Manufacturing Request</field>
            <field name="model">manufacturing.request</field>
            <field name="arch" type="xml">
                <form string="Manufacturing Request">
                    <header>
                       <button name="button_draft_inprogress" string="Validate" type="object" class="oe_highlight"
                                attrs="{'invisible':[('state','in',('supervisor','manager','engineer','supplier','done'))]}"/>
                       <button name="button_inprogress_done" string="confirm" type="object" class="oe_highlight"
                                attrs="{'invisible':[('state','in',('draft','inprogress','done'))]}"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,inprogress,done"/>
                    </header>

                    <sheet string="Custody Information" style="width:40%">
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                            </group>

                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="picking_type_id"/>
                            </group>
                        </group>

                        <group>
                            <notebook>
                                <page string="Spar Parts">
                                    <field name="spar_part_id" mode="tree">
                                        <tree editable="top">
                                            <field name="product_id"/>
                                            <field name="description"/>
                                            <field name="product_uom_id"/>
                                            <field name="product_qty" string="Quantity"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Other Info">
                                    <group>
                                      <field name="picking_stock_id" string="Stock Picking" style="width:40%%" readonly="True"/>
                                    </group>

                                </page>

                            </notebook>
                        </group>
                    </sheet>

                </form>
            </field>

        </record>

        <!-- Tree view of manufacturing Request  -->
        <record id="tree_view_manufacturing" model="ir.ui.view">
            <field name="name">manufacturing Request tree</field>
            <field name="model">manufacturing.request</field>
            <field name="arch" type="xml">
                <tree string="product_id">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>

                </tree>
            </field>
        </record>

        <!-- Action of custody Clearance-->
        <record id="action_view_manufacturing" model="ir.actions.act_window">
            <field name="name">Manufacturing Request</field>
            <field name="res_model">manufacturing.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>

        </record>


        <!--         Menu of manufacturing Request-->
        <menuitem id="menu_manufacturing_main" name="Manufacturing" parent="maintenance.menu_maintenance_title"
                  />
        <menuitem id="menu_manufacturing_request_main" name="Manufacturing Request" parent="menu_manufacturing_main"
                  action="action_view_manufacturing"/>

    </data>


</odoo>
